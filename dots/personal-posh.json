{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "foreground": "lightWhite",
          "background": "blue",
          "properties": {
            "mapped_locations": {
              "~/dev": "\uF09B "
            }
          }
        },
        {
          "type": "go",
          "style": "powerline",
          "foreground": "black",
          "background": "cyan",
          "template": " \ue626 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "fetch_version": true
          }
        },
        {
          "type": "julia",
          "style": "powerline",
          "foreground": "black",
          "background": "blue",
          "template": " \ue624 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "fetch_version": true
          }
        },
        {
          "type": "python",
          "style": "powerline",
          "foreground": "black",
          "background": "yellow",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": false
          }
        },
        {
          "type": "ruby",
          "style": "powerline",
          "foreground": "white",
          "background": "red",
          "template": " \ue791 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "files",
            "fetch_version": true
          }
        },
        {
          "type": "azfunc",
          "style": "powerline",
          "foreground": "white",
          "background": "magenta",
          "template": " \uf0e7{{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "files",
            "fetch_version": false
          }
        },
        {
          "type": "aws",
          "style": "powerline",
          "foreground": "white",
          "background_templates": [
            "{{if contains \"default\" .Profile}}#FFA400{{end}}",
            "{{if contains \"jan\" .Profile}}#f1184c{{end}}"
          ],
          "template": " \ue7ad {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} ",
          "properties": {
            "display_default": false
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "foreground": "black",
          "background": "yellow",
          "template": " \uf0ad "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "git",
          "style": "powerline",
          "foreground": "black",
          "background": "green",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_icon": "\ue0a0 ",
            "branch_identical_icon": "\u25cf",
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true
          }
        },
        {
          "type": "battery",
          "style": "diamond",
          "foreground": "black",
          "background": "white",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}cyan{{end}}",
            "{{if eq \"Discharging\" .State.String}}yellow{{end}}",
            "{{if eq \"Full\" .State.String}}green{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }} {{ .Percentage }}{{ end }}% ",
          "properties": {
            "discharging_icon": "󰚦 ",
            "charging_icon": "󰚥 ",
            "charged_icon": " "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "lightMagenta",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#fff{{ end }}"
          ],
          "template": "\ue285",
          "properties": {
            "always_enabled": true
          }
        }
      ],
      "newline": true
    }
  ],
  "transient_prompt": {
    "foreground": "lightWhite",
    "background": "transparent",
    "template": "\ue285 {{ .PWD }} \uf155 "
  }
}
