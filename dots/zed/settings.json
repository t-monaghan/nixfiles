// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "ollama": {}
  },
  "outline_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true
  },
  "auto_update_extensions": {
    "toml": false
  },
  "tabs": {
    "git_status": true
  },
  "theme": {
    "mode": "system",
    "dark": "Gruvbox Dark",
    "light": "Solarized Light"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "soft_wrap": "none",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "on_yank"
  },
  "scroll_beyond_last_line": "off",
  "ui_font_size": 15,
  "buffer_font_size": 16,
  "ui_font_family": "UDEV Gothic 35NF",
  "buffer_font_family": "UDEV Gothic 35NF",
  "buffer_font_weight": 500,
  "terminal": {
    "button": false,
    "font_size": 16,
    "copy_on_select": true,
    "font_family": "UDEV Gothic 35NF",
    "line_height": "standard"
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "autosave": "on_focus_change",
  // "lsp": {
  //   "golangci-lint": {
  //     "binary": {
  //       "path": "golangci-lint-langserver",
  //       "arguments": ["run", "--out-format", "json", "--issues-exit-code=1"]
  //     }
  //   }
  // },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    }
    // "Plain Text": { "soft_wrap": "editor_width" }
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4"
    },
    "version": "2",
    "provider": null
  }
}
