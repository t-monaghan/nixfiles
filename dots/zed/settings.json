// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "preview_tabs": { "enable_preview_from_file_finder": true },
  "auto_update_extensions": {
    "toml": false
  },
  "theme": "Solarized Light",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "languages": {
    "Markdown": { "soft_wrap": "editor_width" },
    "Plain Text": { "soft_wrap": "editor_width" }
  },
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vim_mode": true,
  "vim": { "use_system_clipboard": "on_yank" },
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "ui_font_family": "UDEV Gothic 35NF",
  "buffer_font_family": "UDEV Gothic 35NF",
  "terminal": {
    "font_size": 15,
    "copy_on_select": true,
    "font_family": "UDEV Gothic 35NF"
  },
  "autosave": "on_window_change"
}
