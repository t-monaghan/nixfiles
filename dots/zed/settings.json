{
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "indent_size": 10
  },
  "outline_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true
  },
  "auto_update_extensions": {
    "toml": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "theme": {
    "mode": "system",
    "dark": "One Dark",
    "light": "Solarized Light"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "soft_wrap": "none",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always"
  },
  "scroll_beyond_last_line": "off",
  "ui_font_size": 15,
  "buffer_font_size": 16,
  "ui_font_family": "UDEV Gothic 35NF",
  "buffer_font_family": "UDEV Gothic 35NF",
  "buffer_font_weight": 500,
  "terminal": {
    "env": { "DFT_BACKGROUND": "light", "BAT_THEME": "Solarized (light)" },
    // "button": false,
    "font_size": 16,
    "copy_on_select": true,
    "font_family": "UDEV Gothic 35NF",
    "line_height": "standard"
  },
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "autosave": "on_focus_change",
  // "lsp": {
  //   "golangci-lint": {
  //     "binary": {
  //       "path": "golangci-lint-langserver",
  //       "arguments": ["run", "--out-format", "json", "--issues-exit-code=1"]
  //     }
  //   }
  // },
  "languages": {
    "Dockerfile": {
      "format_on_save": "off"
    },
    "TypeScript": {
      "format_on_save": "off"
    },
    "Plain Text": {
      "show_inline_completions": false
    },
    "Markdown": {
      "soft_wrap": "editor_width"
    }
    // "Plain Text": { "soft_wrap": "editor_width" }
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "inline_alternatives": [
      { "provider": "copilot_chat", "model": "gpt-4o" },
      { "provider": "copilot_chat", "model": "gpt-4" }
    ]
  },
  "show_diagnostics": true
}
